impious.io {
    root * /srv/site

    log {
        output stdout
        format console
    }

    @enlist path /enlist*
    handle @enlist {
        header X-Impious-Enlist "1"
        reverse_proxy enlist-api:3000
    }

    @health path /healthz
    handle @health {
        reverse_proxy enlist-api:3000
    }

    encode zstd gzip
    try_files {path} {path}/ /index.html
    file_server
}

www.impious.io {
    redir https://impious.io{uri}
}
